<apex:page controller="StudentRecord" id="thePage" contentType="application/vnd.ms-excel">
    
    <style type="text/css">
        .tableRecord { Background:#c2d2ed;padding:10px;font-size:15px;text-align:center; box-shadow:5px 5px 5px;}
        .record:hover { Background: white; }
        .tableClass { text-align:center;}
        .textCenter{text-align:center;}

    </style>
    <apex:pageBlock >
        <apex:form >
            <apex:pageBlockSection columns="1">
                <apex:inputField value="{!saveSingleStudent.Name}" label="Student Name"/>
                <apex:inputField value="{!saveSingleStudent.FatherName__c}" label="Father Name"/>
                <apex:inputField value="{!saveSingleStudent.Phone__c}" label="Phone"/>
            </apex:pageBlockSection>
            
            <apex:pageBlockSection >
                <apex:commandButton action="{!saveStudent}" value="save"/>
                <apex:commandButton action="{!saveEditStudent}" value="update"/>
            </apex:pageBlockSection>
           
        </apex:form>
        
    </apex:pageBlock>
    
    <apex:pageBlock >
        <apex:form styleClass="tableRecord">
            
            <apex:dataTable value="{!students}" var="student" id="theTable"
    	 			rowClasses="odd,even" styleClass="tableClass" border="1" width="500" align="center">
                <apex:facet name="caption"><p class="textCenter"></p></apex:facet>
                <apex:facet name="header"><p class="textCenter">Students List</p></apex:facet>
        
        		<apex:column styleClass="record">
                    <apex:facet name="header"><p class="textCenter">Serial No.</p></apex:facet>
            
            	<apex:outputText value="{!student.Id}" rendered="{!NOT(student.Name=='Ahmad')}" />
                    <label rendered="{!NOT(student.Name=='Ahmad')}">dhjshjsh</label>
        		</apex:column>
        
        		<apex:column styleClass="record">
                    <apex:facet name="header"><p class="textCenter">Name</p></apex:facet>
            	<apex:outputText value="{!student.Name}" />
        		</apex:column>
                
                <apex:column styleClass="record">
                    <apex:facet name="header"><p class="textCenter">Father Name</p></apex:facet>
            	<apex:outputText value="{!student.FatherName__c}" />
        		</apex:column>
                
                <apex:column styleClass="record">
                    <apex:facet name="header"><p class="textCenter">Phone</p></apex:facet>
            	<apex:outputText value="{!student.Phone__c}" />
        		</apex:column>
        
        		<apex:column >
                    <apex:commandLink action="{!getStudentForEdit}" value="Edit">
                        <apex:param name="edit" assignTo="{!studentId}" value="{!student.Id}"/>
                    </apex:commandLink>/
                    <apex:commandLink action="{!delStudent}" value="Delete">
                        <apex:param name="delete" assignTo="{!studentId}" value="{!student.Id}"/>
                    </apex:commandLink>
                    <apex:commandLink action="{!getStudentCourses}" value="Courses">
                        <apex:param name="courses" assignTo="{!studentId}" value="{!student.Id}"/>
                    </apex:commandLink>
                    
                    
              
                    
        		</apex:column>    

    		</apex:dataTable>
        
        </apex:form>
        
    </apex:pageBlock>
    
    <apex:pageBlock rendered="true">
        <apex:pageBlockSection columns="1">
            <apex:outputField value="{!studentInfo.Name}"/>
        	<apex:outputField value="{!studentInfo.FatherName__c}"/>
        	<apex:outputField value="{!studentInfo.Phone__c}"/> 
        </apex:pageBlockSection>
        <apex:pageBlockSection >
        	<apex:dataTable value="{!courseList}" var="course" rendered="true">
    
            	<apex:column styleClass="record">
                    <apex:facet name="header"><p class="textCenter">Course Name</p></apex:facet>
            
            		<apex:outputText value="{!course.Name}"/>
        		</apex:column>
            
            	<apex:column styleClass="record">
                    <apex:facet name="header"><p class="textCenter">Credit hrs</p></apex:facet>
            
            		<apex:outputText value="{!course.CreditHrs__c}"/>
        		</apex:column>
        	</apex:dataTable>
        </apex:pageBlockSection>
        <apex:pageBlockSection >
            <apex:form >
                <apex:selectList value="{!selectedCoursesList}" size="3">
                    <apex:selectOptions value="{!CoursesList}"/>
                </apex:selectList>
                <apex:commandButton action="{!registerdCourse}" value="Register"></apex:commandButton>
                
            </apex:form>

        </apex:pageBlockSection>
    </apex:pageBlock>
    
</apex:page>